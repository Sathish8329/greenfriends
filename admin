apiVersion: apps/v1
kind: Deployment
metadata:
  name: greenfriends-deployment-admin  # Updated name to match greenfriends
  namespace: greenfriends  # Updated namespace to greenfriends
spec:
  replicas: 1
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 0
      maxSurge: 1
  selector:
    matchLabels:
      app: admin-frontend
  template:
    metadata:
      labels:
        app: admin-frontend
    spec:
      nodeSelector:
        eks.amazonaws.com/nodegroup: preprod
      containers:
      - name: admin-frontend
        image: sathish8329/appbuilderadmin:v1
        ports:
        - containerPort: 5001
        readinessProbe:
          httpGet:
            path: /
            port: 5001
          initialDelaySeconds: 30
          periodSeconds: 10
          failureThreshold: 3
---
apiVersion: v1
kind: Service
metadata:
  name: greenfriends-admin-service  # Updated service name to match deployment
  namespace: greenfriends  # Updated namespace to greenfriends
spec:
  selector:
    app: admin-frontend
  ports:
    - protocol: TCP
      port: 80
      targetPort: 5001  # Matches the container port in the deployment
  type: NodePort
